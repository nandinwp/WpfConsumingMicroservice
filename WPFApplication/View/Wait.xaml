<Window x:Class="WPFApplication.View.Wait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication.View"
        mc:Ignorable="d"
        Title="Wait" Height="250" Width="450">
    <Grid>
        <Label Content="Carregando..." HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" Name="lblLoading" Height="93" Width="430" FontFamily="Arial Rounded MT Bold" FontSize="14"/>
        <ProgressBar HorizontalAlignment="Center" Height="10" Margin="0,130,0,0" VerticalAlignment="Top" Width="100" Value="50" Cursor="Arrow" IsIndeterminate="True" Foreground="#FF2FCBFF" Background="#FFECECEC"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="349,197,0,0" VerticalAlignment="Top" Width="69" Name="btnCancel" Click="btnCancel_Click"/>

    </Grid>
</Window>
